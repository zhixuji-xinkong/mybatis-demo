<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper">
    <resultMap id="UserInfo" type="org.example.pojo.UserInfo">
        <result column="id" property="id" />
        <result column="u_id" property="uId" />
        <result column="u_name" property="uName" />
        <result column="gender" property="gender" />
        <result column="age" property="age" />
        <result column="add_time" property="addTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 根据用户 id 查询用户信息-->
    <select id="selectUser" resultMap="UserInfo">
        select * from user_info where u_id = #{uId};
    </select>

    <!-- 查询所有用户 -->
    <select id="selectUsers" resultMap="UserInfo">
        select * from user_info;
    </select>

    <!-- 模糊查询 -->
    <select id="selectLike" resultMap="UserInfo">
        select * from user_info where u_name like '%${value}%';
    </select>

    <!-- 添加单条数据 -->
    <insert id="insertUser" parameterType="org.example.pojo.UserInfo" useGeneratedKeys="true" keyProperty="id">
        insert into user_info
        (u_id, u_name, gender, age, add_time, update_time)
        values
        (#{uId}, #{uName}, #{gender}, #{age}, #{addTime}, #{updateTime});
    </insert>

    <!-- 批量添加数据 -->
    <insert id="insertUsers" parameterType="org.example.pojo.UserInfo" useGeneratedKeys="true" keyProperty="id">
        insert into user_info
            (u_id, u_name, gender, age, add_time, update_time)
        values
            <foreach collection="list" item="item" index="index" separator=",">
                (#{item.uId}, #{item.uName}, #{item.gender}, #{item.age}, #{item.addTime}, #{item.updateTime})
            </foreach>
    </insert>

    <!-- 修改数据 -->
    <update id="updateUser" parameterType="org.example.pojo.UserInfo">
        update user_info
        set u_name = #{uName}, age = #{age}, update_time = #{updateTime}
        where u_id = #{uId}
    </update>

    <!-- 删除数据 -->
    <delete id="deleteUser" parameterType="long">
        delete from user_info where u_id = #{uId}
    </delete>

</mapper>
